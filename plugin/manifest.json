{
  "manifest_version": 2,
  "version": "0.0.1",
  "name": "Highlights",
  "description": "Highlights random words on page",
  "permissions": [
    "activeTab",
    "https://*/",
    "http://*/"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {}, // workaround described here: https://stackoverflow.com/a/38338182/8048608
  "content_scripts": [
    {
      "js": ["./vendors/mark.min.js"],
      "matches": ["<all_urls>"]
    },
    {
      "js": ["./vendors/axios.min.js"],
      "matches": ["<all_urls>"]
    },
    {
      "js": ["idf.js"],
      "matches": ["<all_urls>"]
    }
  ]
}